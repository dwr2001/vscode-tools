{
  "name": "vscode-tools",
  "displayName": "vscode-tools",
  "description": "A VS Code extension with useful tools",
  "version": "0.0.1",
  "publisher": "dwr2001",
  "repository": {
    "type": "git",
    "url": "https://github.com/dwr2001/vscode-tools.git"
  },
  "engines": {
    "node": ">=18",
    "vscode": "^1.82.0"
  },
  "categories": ["Other"],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "files": ["dist", "public", "LICENSE", "package.json"],
  "contributes": {
    "commands": [
      {
        "command": "vscode-tools.helloWorld",
        "title": "Hello World",
        "category": "VSCode Tools"
      },
      {
        "command": "vscode-tools.createNewFile",
        "title": "Create New File",
        "category": "VSCode Tools"
      },
      {
        "command": "vscode-tools.readFile",
        "title": "Read File",
        "category": "VSCode Tools"
      },
      {
        "command": "vscode-tools.testTreeContext",
        "title": "Test Tree Context",
        "category": "VSCode Tools"
      }
    ],
    "views": {
      "onigiri-container": [
        {
          "id": "vscode-tools.view",
          "name": "",
          "icon": "public/onigiri.svg",
          "type": "webview"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "onigiri-container",
          "title": "Onigiri",
          "icon": "public/onigiri.svg"
        }
      ]
    },
    "configuration": {
      "title": "VSCode Tools",
      "properties": {
        "vscode-tools.apiKey": {
          "type": "string",
          "description": "DeepSeek API Key"
        }
      }
    }
  },
  "scripts": {
    "build": "rsbuild build",
    "dev": "rsbuild build --watch",
    "package": "vsce package --no-dependencies && mv vscode-tools-*.vsix ../..",
    "format": "biome format --write"
  },
  "dependencies": {
    "@vscode-tools/protocol": "*",
    "treeify": "^1.1.0",
    "directory-tree": "^3.5.1"
  },
  "devDependencies": {
    "@vscode/vsce": "^3.6.0",
    "@biomejs/biome": "^1.9.0"
  }
}
